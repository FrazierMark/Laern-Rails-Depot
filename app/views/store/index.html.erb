<div class="w-full">
<%= render "notice" %>

<h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
  Your Pragmatic Catalog
</h1>

<ul>
  <%# Whenever the data changes in our cache, section will be rerendered %>
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li class='flex mb-6'>
          <%= image_tag(product.image_url,
            class: 'object-contain w-40 h-48 shadow mr-6') %>

          <div>
            <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>

            <p>
              <%= sanitize(product.description) %>
            </p>

            <div class="mt-3">
              <%= number_to_currency(product.price) %>

              <%# # button_to uses the POST method to add a product to the cart
              # calls the create action of the line_items controller %>
              <%= button_to "Add to Cart",
                line_items_path(product_id: product),
                # puts the button on the same line as price
                form_class: 'inline',
                class: 'ml-4 rounded-lg ppy-1 px-2 text-white bg-green-600' %>
            </div>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
</div>
